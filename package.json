{
  "name": "nodejs-full-backend",
  "version": "1.0.0",
  "description": "this is helper backend which",
  "repository": {
    "type": "git",
    "url": "git@gitlab.dsg-i.com:store-mode/storemode-bff-gateway-service.git"
  },
  "license": "MIT",
  "author": "Jakub Å vehla",
  "main": "src/main.ts",
  "scripts": {
    "build": "rm -rf ./build && tsc -p ./",
    "db:init-schema": "ts-node ./scripts/createDbCLI",
    "db:load-data": "ts-node ./scripts/loadDataCLI",
    "db:hard-init": "npm run db:init-schema && npm run db:load-data",
    "docker:db:hard-init": "docker-compose run app npm run db:hard-init",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose stop",
    "docker:install": "docker-compose run --no-deps --rm app npm i",
    "docker:test": "docker-compose run app npm run test",
    "docker:test-coverage": "docker-compose run app npm run test-coverage",
    "docker:test:watch": "docker-compose run app npm run test:watch",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "l": "yarn run lint:fix",
    "lint": "eslint \"{src,fixtures,scripts,dbMigrationsScripts,tests}/**/*.{js,ts}\"",
    "lint:fix": "eslint \"{src,fixtures,scripts,dbMigrationsScripts,tests}/**/*.{js,ts}\" --fix",
    "ts:check-types": "tsc",
    "ts:check-types:watch": "tsc --watch",
    "test": "cross-env ENVIRONMENT=test npm run db-hard-init && cross-env ENVIRONMENT=test mocha -r ts-node/register tests/gql/**/*.test.ts --exit",
    "test:coverage": "cross-env ENVIRONMENT=test npm run db-hard-init && cross-env ENVIRONMENT=test nyc mocha -r ts-node/register tests/gql/**/*.test.ts --exit",
    "test:watch": "cross-env ENVIRONMENT=test npm run db-hard-init && cross-env ENVIRONMENT=test mocha -r ts-node/register tests/gql/**/*.test.ts --watch --recursive --watch-extensions ts"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-errors": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.4.0",
    "graphql-custom-types": "^1.6.0",
    "graphql-playground-middleware-express": "^1.7.22",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.1",
    "math-random-seed": "^2.0.0",
    "moment": "^2.29.1",
    "pg": "^8.5.1",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.21",
    "@types/pg": "^7.14.11",
    "@types/ramda": "^0.27.36",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0"
  }
}
