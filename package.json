{
  "name": "node-full-backend",
  "version": "0.5.0",
  "repository": "",
  "license": "MIT",
  "author": "Jakub Å vehla",
  "main": "src/main.ts",
  "scripts": {
    "build": "rm -rf ./build && tsc -p ./",
    "db-createDb": "ts-node ./scripts/createDb",
    "db-hard-init": "npm run db-init-schema && npm run db-load-data",
    "db-init-schema": "ts-node ./scripts/createDb && ts-node ./scripts/syncTablesWithDb",
    "db-load-data": "ts-node ./scripts/loadData",
    "docker-db-hard-init": "docker-compose run app npm run db-hard-init",
    "docker-start": "docker-compose up --build",
    "docker-start:legacy": "docker-compose run app npm run start:legacy --build",
    "docker-test": "docker-compose run app npm run test",
    "docker-test-coverage": "docker-compose run app npm run test-coverage",
    "docker-test:watch": "docker-compose run app npm run test:watch",
    "lint": "tslint -p ./tsconfig.json",
    "lint:fix": "tslint --fix -p ./tsconfig.json",
    "mocha": "mocha",
    "start": "nodemon src/main.ts",
    "start:legacy": "nodemon src/main.ts --legacy-watch",
    "test": "cross-env ENVIROMENT=test npm run db-hard-init && cross-env ENVIROMENT=test mocha -r ts-node/register tests/gql/**/*.test.ts --exit",
    "test-coverage": "cross-env ENVIROMENT=test npm run db-hard-init && cross-env ENVIROMENT=test nyc mocha -r ts-node/register tests/gql/**/*.test.ts --exit",
    "test:watch": "cross-env ENVIROMENT=test npm run db-hard-init && cross-env ENVIROMENT=test mocha -r ts-node/register tests/gql/**/*.test.ts --watch --recursive --watch-extensions ts"
  },
  "dependencies": {
    "@types/moment": "^2.13.0",
    "@types/node-fetch": "^2.1.2",
    "apollo-errors": "^1.9.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "case": "^1.5.5",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-cursor-sql-helper": "^0.1.0",
    "graphql-custom-types": "^1.4.0",
    "graphql-playground-middleware-express": "^1.7.3",
    "graphql-relay": "^0.5.5",
    "graphql-subscriptions": "^0.5.8",
    "helmet": "^3.13.0",
    "inline-css": "^2.4.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.9.0",
    "sequelize": "^4.38.0",
    "subscriptions-transport-ws": "^0.9.14",
    "ts-node": "^7.0.0",
    "twin-bcrypt": "^2.1.1",
    "validator": "^10.7.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/core-js": "^2.5.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.1",
    "@types/graphql-relay": "^0.4.5",
    "@types/helmet": "^0.0.40",
    "@types/html-pdf": "^2.1.2",
    "@types/inline-css": "^0.0.31",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.9.2",
    "@types/passport": "^0.4.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.4.10",
    "@types/ramda": "^0.25.36",
    "@types/sequelize": "^4.27.25",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^13.0.1",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/main.ts"
    ],
    "reporter": [
      "text"
    ]
  }
}
